# Copy this file to .env and adjust values for local development

# Database
POSTGRES_DB=taiga
POSTGRES_USER=taiga
POSTGRES_PASSWORD=taiga

# Taiga core settings
# SECRET_KEY is required by taiga-protected; use a long random string
SECRET_KEY=change_me_to_a_random_long_string
# TAIGA_SECRET_KEY can be used by backend; keep the same value for simplicity
TAIGA_SECRET_KEY=change_me_to_a_random_long_string
TAIGA_SITES_DOMAIN=localhost
TAIGA_SITES_SCHEME=http
TAIGA_HTTP_PORT=9000

# Public URLs and base
TAIGA_BASE_URL=http://localhost:9000
TAIGA_FRONTEND_URL=http://localhost:9000
TAIGA_BACKEND_URL=http://localhost:9000/api/v1
TAIGA_EVENTS_URL=ws://localhost:9000/events

# Database connection for Taiga services
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgres://taiga:taiga@postgres:5432/taiga

# Redis & RabbitMQ URLs
REDIS_URL=redis://redis:6379/0
RABBITMQ_USER=taiga
RABBITMQ_PASSWORD=taiga
RABBITMQ_VHOST=taiga
RABBITMQ_URL=amqp://taiga:taiga@rabbit:5672/taiga

# Registration and auth
TAIGA_PUBLIC_REGISTER_ENABLED=true
TAIGA_ALLOWED_HOSTS=*

# Optional: Email (leave unset for local)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your_user
# EMAIL_HOST_PASSWORD=your_pass
# EMAIL_USE_TLS=true

# Dev convenience auth (used by scripts/taiga-auth.sh)
TAIGA_ADMIN_USER=admin
TAIGA_ADMIN_PASSWORD=
